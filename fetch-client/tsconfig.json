{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declarationMap": true,
    "incremental": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "outDir": "lib",
    "lib": [
      "ESNext"
    ],
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "lib",
    "eslint.config.mjs"
  ]
}
